{
    "manifest_version": 3,
    "name": "Clipboard Manager",
    "description": "copy text from the clipboard",
    "version": "1.0",
    "icons":{
        "16": "images copy/icon-16.png",
        "32": "images copy/icon-32.png",
        "48": "images copy/icon-48.png",
        "128": "images copy/icon-128.png"
    },
    "minimum_chrome_version": "93",
    "background":{
        "service_worker": "scripts/script.js",
        "type": "module"
    },
    "action": {
        "default_popup": "index.html",
        "default_icon": "images/logo.png"
    },
    "permissions": [
        "clipboardWrite",
        "clipboardRead",
        "activeTab",
        "contextMenus",
        "storage",
        "notifications",
        "unlimitedStorage"
    ]
}

  